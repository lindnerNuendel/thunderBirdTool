{
  "manifest_version": 2,
  "name": "Ablehnen",
  "description": "Weitergeleitete E-Mail ausw√§hlen, dann auf diesen Button klicken",
  "version": "0.1",
  "author": "Your Name",
  "browser_specific_settings": {
    "gecko": {
      "id": "myaddon@company.com",
      "strict_min_version": "128.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png"
  },

  "message_display_action": {
    "default_title": "Ablehnen & Verschieben",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },

  "permissions": [
    "accountsRead",      
    "messagesRead",     
    "messagesMove",     
    "compose",          
    "mailTabs",         
    "messageDisplay"    
  ]
}
